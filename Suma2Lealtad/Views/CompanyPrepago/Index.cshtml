@model IEnumerable<Suma2Lealtad.Models.PrepagoCompanyAffiliattes>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="css/bootstrap.css" rel="stylesheet">*@
<link href="~/Content/bootstrap.css" rel="stylesheet" />
@*<link href="css/style.css" rel="stylesheet">*@
<link href="~/Content/style.css" rel="stylesheet" />

<style type="text/css" media="screen">
    .table-hover {
        cursor: pointer;
    }

    .table tbody tr.active td {
        background-color: #1C2B2B; /*#476B6B #29A329;*/
        color: white;
    }
</style>

<div class="container">

    <div class="row">

        <div class="col-md-push-1 col-md-10">

            <div class="panel panel-default">

                <div class="panel-heading clearfix panel-gradient">
                    <h3 class="panel-title">Prepago / Compañía / Lista de Registros </h3>
                </div>

                <div class="panel-body">

                    @*<table class="table table-striped custab">*@
                    <table id="compañias" class="table table-hover">
                        <thead>

                            <tr>
                                <th>Nombre</th>
                                <th>Alias</th>
                                <th>RIF</th>
                                <th>Dirección</th>
                                <th>Teléfono</th>
                                <th>Correo</th>
                                <th class="text-center"></th>
                            </tr>

                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.namecompañia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.alias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.rif)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Beneficiarios", "CompanyPrepago", new { id = item.id })" class="btn btn-success btn-xs">
                                            <span class="glyphicon glyphicon-user"></span>
                                        </a>
                                        <a href="@Url.Action("Edit", "CompanyPrepago", new { id = item.id })" class="btn btn-info btn-xs">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>
                                        <a href="@Url.Action("Delete", "CompanyPrepago", new { id = item.id })" class="btn btn-danger btn-xs">
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>

                    <script src="~/Scripts/jquery-2.1.3.min.js"></script>
                    <script>
                        $(document).ready(function () {
                            var rowId;
                            var colId;
                        });

                        $('.table tbody tr td:not(:last-child)').click(function () {
                            var filatabla = $(this).closest('tr');
                            rowId = $(filatabla).data("row-key");
                            $('.table tbody tr').removeClass("active");
                            $(filatabla).addClass("active");
                        });
                    </script>

                    <!-- buttons -->
                    <div class="col-md-12 col-tabla-btn">
                        <div class="pull-right">
                            <a href="@Url.Action("Create", "CompanyPrepago")" class="btn btn-success btn-md">Agregar Nuevo Registro</a>
                        </div>
                    </div>
                    <!--// buttons -->

                </div>
                <!-- panel-body -->

            </div>
            <!-- panel -->

        </div>
        <!-- columns -->

    </div>
    <!-- row -->

</div>
<!-- container -->
