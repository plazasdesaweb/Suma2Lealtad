@model Suma2Lealtad.Models.CIUDAD

@{
    ViewBag.Title = "FilterCiudad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="col-md-7 col-md-offset-2">

            <div class="panel panel-default">

                <div class="panel-heading clearfix panel-gradient">
                    <h3 class="panel-title">Buscar / Ciudad</h3>
                </div>

                <div class="panel-body">
                    
                    <form action="@Url.Action("Index", "Ciudad")" method="post" class="form-horizontal" role="form">

                            <div class="form-group">

                                <div class="editor-label col-md-4 control-label">
                                    Ciudad :
                                </div>
                                <div class="editor-field col-md-8">
                                    @Html.TextBoxFor(model => model.DESCRIPC_CIUDAD, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DESCRIPC_CIUDAD)
                                </div>

                            </div>

                            <!-- buttons -->
                            <div class="form-group">
                                <div class="col-md-12 col-btn">
                                    <div class="pull-right">
                                        <input type="submit" class="btn btn-success btn-md" value="Buscar" />
                                        <a class="btn btn-success btn-md" href="@Url.Action("Create", "Ciudad")">Agregar Nuevo</a>
                                    </div>
                                </div>
                            </div>
                            <!--// buttons -->

                        </form>

                </div>
                <!--// panel-body -->

            </div>
            <!--// panel panel-default -->

        </div>
        <!--// columns -->

    </div>
    <!--// row -->

</div>
<!--// container row -->
