@model Suma2Lealtad.Models.Afiliado

@{
    ViewBag.Title = "Edit";
}

<div class="container">

    <div class="row">

        <div class="col-md-7 col-md-offset-2">

            <div class="panel panel-default">

                <div class="panel-heading clearfix panel-gradient">
                    <h3 class="panel-title">Afiliado / Editar Datos</h3>
                </div>

                <div class="panel-body">

                    @* Para acceder a las operaciones con Silverlight *@
                    <div class="form-group">
                        <div class="col-md-12 col-btn">
                            <div class="pull-right">
                                <a id="boton5" href="@Url.Action("OperacionesImpresora", "Afiliado")" class="btn btn-warning btn-md" role="button">OperacionesImpresora</a>
                                <a id="boton6" href="@Url.Action("OperacionesPinPad", "Afiliado")" class="btn btn-warning btn-md" role="button">OperacionesPinPad</a>
                            </div>
                        </div>
                    </div>
                    @* Fin Para acceder a las operaciones con Silverlight *@

                    @using (Html.BeginForm())
                    {
                     
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
