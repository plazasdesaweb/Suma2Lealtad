                </div>
                <!-- panel-heading -->

        <div class="panel-body">

            <form id="commentForm" method="post" action="@Url.Action("Edit", "Afiliado")" class="form-horizontal">

                <div id="rootwizard">
                    <div class="navbar navbar-default">
                        <div class="navbar-inner">
                            <ul>
                                <li><a href="#tab1" data-toggle="tab">Datos Básicos</a></li>
                                <li><a href="#tab2" data-toggle="tab">Documentos</a></li>
                                <li><a href="#tab3" data-toggle="tab">Temas de Interés</a></li>
                            </ul>
                        </div>
                    </div>
        <div class="tab-content">

        <!-- DATOS BÁSICOS -->                    
                        <div class="tab-pane" id="tab1">

            <div class="editor-label col-md-4 control-label"></div>
                            <div class="editor-field col-md-8">
                                <br />
                            </div>

            @Html.HiddenFor(model => model.typeid)

