    @(String.Format("{0} {1}", "Fecha hasta: ", Model.First().Encabezado.fechafinReporte))
</div>
<div class="editor-field col-md-12">
    @(String.Format("{0} {1}", "Estado de Tarjeta: ", Model.First().Encabezado.estatustarjetaReporte))
</div>

<div class="editor-label col-md-4 control-label"></div>
<div class="editor-field col-md-8">
    <br />
</div>

<table id="detalleReporte" class="table table-striped custab">

    <thead>
        <tr>
            <th>Cliente
            </th>
            <th>Beneficiario
            </th>
            <th>Fecha
            </th>
            <th>Número de Tarjeta
            </th>
            <th>
            Estatus                        
        </tr>
    </thead>

    <tbody style="font-size: 12px">
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {                            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Beneficiario.Cliente.nameCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beneficiario.Afiliado.name) @Html.DisplayFor(modelItem => item.Beneficiario.Afiliado.lastname1)
                </td>
                <td>
                    @(String.Format("{0}", item.fecha.ToString("dd/MM/yyyy hh:mm tt")))
                </td>
                <td>
                    @(String.Format("{0}", Math.Truncate(item.numerotarjeta)))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estatustarjeta)
                </td>
            </tr>                            
            }
        }
    </tbody>

</table>

