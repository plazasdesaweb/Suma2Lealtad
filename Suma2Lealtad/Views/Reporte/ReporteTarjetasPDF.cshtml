    @(String.Format("{0} {1}", "Nombre del Reporte: ", Model.First().Encabezado.nombreReporte))
</div>
<div class="editor-field col-md-12">
    @(String.Format("{0} {1}", "Tipo de Consulta: ", Model.First().Encabezado.tipoconsultaReporte))
</div>

@if (Model.First().Encabezado.tipoconsultaReporte == "Por Cliente")
{
    <div class="editor-field col-md-12">
        @(String.Format("{0} {1}", "Cliente: ", Model.First().Encabezado.parametrotipoconsultaReporte))
    </div>
}
else
{
    <div class="editor-field col-md-12">
        @(String.Format("{0} {1}", "Beneficiario: ", Model.First().Encabezado.parametrotipoconsultaReporte))
    </div>
}
