@model Suma2Lealtad.Models.ESTADO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="col-md-7 col-md-offset-2">

            <div class="panel panel-default">

                <div class="panel-heading clearfix panel-gradient">
                    <h3 class="panel-title">Estado / Editar Registro</h3>
                </div>

                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.COD_ESTADO)

                        <form class="form-horizontal" role="form">

                            <div class="form-group">

                            @Html.HiddenFor(model => model.COD_ESTADO)

                            <div class="editor-label col-md-4 control-label">
                                Estado :
                            </div>
                            <div class="editor-field col-md-8">
                                @Html.TextBoxFor(model => model.DESCRIPC_ESTADO, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DESCRIPC_ESTADO)
                            </div>

                            </div>

                            <!-- buttons -->
                            <div class="form-group">
                                <div class="col-md-12 col-btn">
                                    <div class="pull-right">
                                        <input type="submit" class="btn btn-success btn-md" value="Guardar" />
                                        <a class="btn btn-danger btn-md" href="@Url.Action("Index", "Estado")">Cancelar</a>
                                    </div>
                                </div>
                            </div>
                            <!--// buttons -->

                        </form>
                
                    }

                </div>
                <!--// panel-body -->

            </div>
            <!--// panel panel-default -->

        </div>
        <!--// columns -->

    </div>
    <!--// row -->

</div>
<!--// container -->