@model Suma2Lealtad.Models.Ocupacion

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

        <div class="row">

            <div class="col-md-push-3 col-md-6">

        	<div class="panel panel-default">

                <div class="panel-heading clearfix panel-gradient">
				<h3 class="panel-title">Ocupaciones / Eliminar Registro</h3>
                </div>

                <div class="panel-body">

					<div class="row">

                    	<div class="col-md-push-2 col-md-8 text-center">
						¿ Esta Ud. seguro de eliminar este registro ?
						</div>

                    	<div class="col-md-push-2 col-md-8">
                            <div class="display-field text-center">
                                @Html.DisplayFor(model => model.Nombre)
                            </div>
						</div>

                  	</div>

					<!-- BOTONES -->
					<div class="form-group">

						<div class="col-md-12 col-btn">
							<div class="text-center">

                                @using (Html.BeginForm()) {
                                @Html.AntiForgeryToken()
                                <p>
                                    <input type="submit" class="btn btn-success" value="Aceptar" />
                                    <a href="@Url.Action("Index", "Ocupacion")" class="btn btn-danger" role="button">Cancelar</a>
                                </p>
                                }

							</div>
						</div>

					</div>
					<!--// BOTONES -->

               	</div><!--// panel-body -->

            </div><!--// panel panel-default -->

            </div><!--// col-md-push-3 col-md-6 -->

		</div><!--// row -->

    </div><!--// container -->